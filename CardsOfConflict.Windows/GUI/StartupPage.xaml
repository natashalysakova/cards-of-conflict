<Page x:Class="CardsOfConflict.Windows.GUI.StartupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardsOfConflict.Windows.GUI"
      xmlns:vm="clr-namespace:CardsOfConflict.Windows.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" d:Background="White" d:DataContext="{d:DesignInstance Type=vm:GameViewModel, IsDesignTimeCreatable=True}"
      Title="StartupPage">

    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Width" Value="200" />
                <Setter Property="Height" Value="50" />
            </Style>
        </Grid.Resources>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="New game" Click="Button_Click"/>
            <Button Content="Join Game" Click="Button_Click_1"/>
            <Button Content="Settings" Click="Button_Click_2"/>
        </StackPanel>
    </Grid>
</Page>
